{
  "manifest_version": 3,
  "name": "MouseHunt Improved",
  "version": "EXT_VERSION",
  "author": "bradp <brad@bradparbs.com>",
  "description": "Improve your MouseHunt experience",
  "homepage_url": "https://mouse.rip",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "omnibox": { "keyword" : "mh" },
  "host_permissions": [ "https://*.mousehuntgame.com/*" ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://*.mousehuntgame.com/*"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["main.js", "main.css"],
      "matches": ["https://*.mousehuntgame.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Better MouseHunt"
  }
}
