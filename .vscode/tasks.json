{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "command": "bun run build:extension:chrome",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "Lint",
      "command": "bun run lint",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": "test",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    }
  ]
}
