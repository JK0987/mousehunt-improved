{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "command": "bun run build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Lint",
      "command": "bun run lint",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}
